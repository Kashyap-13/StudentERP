@model StudentERP.Models.country

@{
    ViewBag.Title = "Add Country";
}

@using (Html.BeginForm("Add_country", "Home", FormMethod.Post))
{

    <div class="dialog">
        <div class="panel-default">

            @using (Html.BeginForm("login", "home", FormMethod.Get))
            {
                <table width="100%">
                    <tr>
                        <th colspan="3" class="header">Add Country</th>
                    </tr>

                    <tr>
                        <td colspan="3">&nbsp;</td>
                    </tr>
                    <tr>
                        <td colspan="3">&nbsp;</td>
                    </tr>
                    <tr>
                        <td>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</td>

                        <td class="subheader">@Html.LabelFor(lbl => lbl.Name)</td>

                        <td class="subheader">@Html.TextBoxFor(txt => txt.Name)</td>

                        <td>@Html.ValidationMessageFor(m => m.Name)</td>
                    </tr>
                    <tr>
                        <td colspan="3">&nbsp;</td>
                    </tr>

                    <tr>
                        <td colspan="3" class="incenter"><input type="submit" value="Add" class="bn" /></td>
                    </tr>

                    <tr>
                        <td colspan="3">&nbsp;</td>
                    </tr>
                </table>
            }
        </div>
    </div>
}