@model StudentERP.Models.standard_wies_subject

@{
    ViewBag.Title = "Add Standard Wise Subject";
}

<div class="dialog">
    <div class="panel-default">

        @using (Html.BeginForm("Add_standard_wies_subject", "Home", FormMethod.Post))
        {
            <table width="100%">
                <tr>
                    <th colspan="3" class="header">Add Standard Wies Subject</th>
                </tr>

                <tr>
                    <td colspan="3">&nbsp;</td>
                </tr>
                <tr>
                    <td colspan="3">&nbsp;</td>
                </tr>
                <tr>
                    <td>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</td>

                    <td class="subheader">@Html.LabelFor(lbl => lbl.std)</td>

                    <td class="subheader">@Html.DropDownList("Standard", (IEnumerable<SelectListItem>)ViewBag.std, "---Select---")</td>

                    <td>@Html.ValidationMessageFor(m => m.std)</td>
                </tr>
                <tr>
                    <td colspan="3">&nbsp;</td>
                </tr>
                <tr>
                    <td>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</td>

                    <td class="subheader">@Html.LabelFor(lbl => lbl.sub)</td>

                    <td class="subheader">@Html.DropDownList("Subject", (IEnumerable<SelectListItem>)ViewBag.sub, "---Select---")</td>

                    <td>@Html.ValidationMessageFor(m => m.sub)</td>
                </tr>
                <tr>
                    <td colspan="3">&nbsp;</td>
                </tr>
                <tr>
                    <td>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</td>

                    <td class="subheader">@Html.LabelFor(lbl => lbl.aca)</td>

                    <td class="subheader">@Html.DropDownList("Year", (IEnumerable<SelectListItem>)ViewBag.yr, "---Select---")</td>

                    <td>@Html.ValidationMessageFor(m => m.aca)</td>
                </tr>
                <tr>
                    <td colspan="3">&nbsp;</td>
                </tr>
                <tr>
                    <td colspan="3" class="incenter"><input type="submit" value="Add" class="bn" /></td>
                </tr>

                <tr>
                    <td colspan="3">&nbsp;</td>
                </tr>
            </table>
        }
    </div>
</div>