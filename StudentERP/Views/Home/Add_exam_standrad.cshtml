@model StudentERP.Models.exam_standard

@{
    ViewBag.Title = "Add Exam Standrad";
}

<div class="dialog">
    <div class="panel-default">

        @using (Html.BeginForm("login", "home", FormMethod.Get))
        {
            <table width="100%">
                <tr>
                    <th colspan="3" class="header">Add Exam Standard</th>
                </tr>

                <tr>
                    <td colspan="3">&nbsp;</td>
                </tr>
                <tr>
                    <td colspan="3">&nbsp;</td>
                </tr>
                <tr>
                    <td>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</td>

                    <td class="subheader">@Html.LabelFor(lbl => lbl.exam)</td>

                    <td class="subheader">@Html.DropDownList("Exam", (IEnumerable<SelectListItem>)ViewBag.examlist, "---Select---")</td>

                    <td>@Html.ValidationMessageFor(m => m.exam)</td>
                </tr>
                <tr>
                    <td colspan="3">&nbsp;</td>
                </tr>
                <tr>
                    <td>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</td>

                    <td class="subheader">@Html.LabelFor(lbl => lbl.std_div)</td>

                    <td class="subheader">@Html.DropDownList("Standard_Division", (IEnumerable<SelectListItem>)ViewBag.std_divlist, "---Select---")</td>

                    <td>@Html.ValidationMessageFor(m => m.std_div)</td>
                </tr>
                <tr>
                    <td colspan="3">&nbsp;</td>
                </tr>

                <tr>
                    <td colspan="3" class="incenter"><input type="submit" value="Add" class="bn" /></td>
                </tr>

                <tr>
                    <td colspan="3">&nbsp;</td>
                </tr>
            </table>
        }
    </div>
</div>