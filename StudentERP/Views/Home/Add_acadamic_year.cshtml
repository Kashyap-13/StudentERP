@model StudentERP.Models.acadamic_year

@{
    ViewBag.Title = "Add Acadamic Year";
}

<div class="dialog">
    <div class="panel-default">

        @using (Html.BeginForm("Add_acadamic_year", "Home", FormMethod.Post))
        {
            <table width="100%">
                <tr>
                    <th colspan="3" class="header">Add Acadamic Year</th>
                </tr>

                <tr>
                    <td colspan="3">&nbsp;</td>
                </tr>
                <tr>
                    <td colspan="3">&nbsp;</td>
                </tr>
                <tr>
                    <td>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</td>

                    <td class="subheader">@Html.LabelFor(lbl => lbl.Year)</td>

                    <td class="subheader">@Html.TextBoxFor(txt => txt.Year, new { id = "txt1", @placeholder = "2014-2015" })</td>

                    <td>@Html.ValidationMessageFor(m => m.Year)</td>
                </tr>

                <tr>
                    <td colspan="3">&nbsp;</td>
                </tr>

                <tr>
                    <td colspan="3" class="incenter"><input type="submit" value="Add" class="bn" /></td>
                </tr>

                <tr>
                    <td colspan="3">&nbsp;</td>
                </tr>
            </table>
        }
    </div>
</div>
