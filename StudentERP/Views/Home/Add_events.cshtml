@model StudentERP.Models.events

@{
    ViewBag.Title = "Add Events";
}

<div class="dialog">
    <div class="panel-default">

        @using (Html.BeginForm("login", "home", FormMethod.Get))
        {
            <table width="100%">
                <tr>
                    <th colspan="3" class="header">Add Events</th>
                </tr>

                <tr>
                    <td colspan="3">&nbsp;</td>
                </tr>
                <tr>
                    <td colspan="3">&nbsp;</td>
                </tr>
                <tr>
                    <td>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</td>

                    <td class="subheader">@Html.LabelFor(lbl => lbl.typ)</td>

                    <td class="subheader">@Html.DropDownList("Type", (IEnumerable<SelectListItem>)ViewBag.typelist, "---Select---")</td>

                    <td>@Html.ValidationMessageFor(m => m.typ)</td>
                </tr>

                <tr>
                    <td colspan="3">&nbsp;</td>
                </tr>
                <tr>
                    <td>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</td>

                    <td class="subheader">@Html.LabelFor(lbl => lbl.titl)</td>

                    <td class="subheader">@Html.TextBoxFor(txt => txt.titl)</td>

                    <td>@Html.ValidationMessageFor(m => m.titl)</td>
                </tr>

                <tr>
                    <td colspan="3">&nbsp;</td>
                </tr>
                <tr>
                    <td>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</td>

                    <td class="subheader">@Html.LabelFor(lbl => lbl.sdate)</td>

                    <td class="subheader">@Html.TextBoxFor(txt => txt.sdate)</td>

                    <td>@Html.ValidationMessageFor(m => m.sdate)</td>
                </tr>

                <tr>
                    <td colspan="3">&nbsp;</td>
                </tr>
                <tr>
                    <td>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</td>

                    <td class="subheader">@Html.LabelFor(lbl => lbl.edate)</td>

                    <td class="subheader">@Html.TextBoxFor(txt => txt.edate)</td>

                    <td>@Html.ValidationMessageFor(m => m.edate)</td>
                </tr>

                <tr>
                    <td colspan="3">&nbsp;</td>
                </tr>
                <tr>
                    <td>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</td>

                    <td class="subheader">@Html.LabelFor(lbl => lbl.std)</td>

                    <td class="subheader">@Html.DropDownList("Standard", (IEnumerable<SelectListItem>)ViewBag.stdlist, "---Select---")</td>

                    <td>@Html.ValidationMessageFor(m => m.std)</td>
                </tr>

                <tr>
                    <td colspan="3">&nbsp;</td>
                </tr>
                <tr>
                    <td>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</td>

                    <td class="subheader">@Html.LabelFor(lbl => lbl.divi)</td>

                    <td class="subheader">@Html.DropDownList("Division", (IEnumerable<SelectListItem>)ViewBag.divlist, "---Select---")</td>

                    <td>@Html.ValidationMessageFor(m => m.divi)</td>
                </tr>

                <tr>
                    <td colspan="3">&nbsp;</td>
                </tr>
                <tr>
                    <td>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</td>

                    <td class="subheader">@Html.LabelFor(lbl => lbl.descrp)</td>

                    <td class="subheader">@Html.TextAreaFor(txt => txt.descrp)</td>

                    <td>@Html.ValidationMessageFor(m => m.descrp)</td>
                </tr>
                <tr>
                    <td colspan="3">&nbsp;</td>
                </tr>

                <tr>
                    <td colspan="3" class="incenter"><input type="submit" value="Add" class="bn" /></td>
                </tr>

                <tr>
                    <td colspan="3">&nbsp;</td>
                </tr>
            </table>
        }
    </div>
</div>