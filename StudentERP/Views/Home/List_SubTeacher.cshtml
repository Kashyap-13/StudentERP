@model List<StudentERP.Models.subject_teacher>
@Styles.Render("~/Content/css")
@{
    ViewBag.Title = "List_SubTeacher";
}

<h2>List_SubTeacher</h2>

@{
    var grid = new WebGrid(Model);
    WebGridColumn[] subdetail ={
                                 grid.Column(header:"TeacherName",format:a=>a.tname),grid.Column(header:"Standard",format:a=>a.std),grid.Column(header:"Divison",format:a=>a.div), grid.Column(header:"SubjectName",format:a=>a.sub),grid.Column(header:"AcadamicYear",format:a=>a.acadyear),grid.Column(header:"Edit",format:(a)=>Html.ActionLink("Edit","Add_class_teacher",new{id=a.subjectteacherId},"Home"))

                              };
}
<div class="dialog">

    @grid.GetHtml(tableStyle: "PGrid", headerStyle: "Header", columns: subdetail)
</div>