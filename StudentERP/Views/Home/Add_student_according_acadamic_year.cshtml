@model StudentERP.Models.student_according_acadamic_year

@{
    ViewBag.Title = "Add Student according Acadamic Year";
}

<div class="dialog">
    <div class="panel-default">

        @using (Html.BeginForm("login", "home", FormMethod.Get))
        {
            <table width="100%">
                <tr>
                    <th colspan="3" class="header">Add Student According Acadamic Year</th>
                </tr>

                <tr>
                    <td colspan="3">&nbsp;</td>
                </tr>
                <tr>
                    <td colspan="3">&nbsp;</td>
                </tr>
                <tr>
                    <td>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</td>

                    <td class="subheader">@Html.LabelFor(lbl => lbl.ayear)</td>

                    <td class="subheader">@Html.DropDownList("Acadamic Year", (IEnumerable<SelectListItem>)ViewBag.yearlist, "---Select---")</td>

                    <td>@Html.ValidationMessageFor(m => m.ayear)</td>
                </tr>

                <tr>
                    <td colspan="3">&nbsp;</td>
                </tr>
                <tr>
                    <td>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</td>

                    <td class="subheader">@Html.LabelFor(lbl => lbl.std_div)</td>

                    <td class="subheader">@Html.DropDownList("Standard_Division", (IEnumerable<SelectListItem>)ViewBag.std_divlist, "---Select---")</td>

                    <td>@Html.ValidationMessageFor(m => m.std_div)</td>
                </tr>

                <tr>
                    <td colspan="3">&nbsp;</td>
                </tr>
                <tr>
                    <td>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</td>

                    <td class="subheader">@Html.LabelFor(lbl => lbl.sname)</td>

                    <td class="subheader">@Html.TextBoxFor(txt => txt.sname)</td>

                    <td>@Html.ValidationMessageFor(m => m.sname)</td>
                </tr>

                <tr>
                    <td colspan="3">&nbsp;</td>
                </tr>
                <tr>
                    <td>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</td>

                    <td class="subheader">@Html.LabelFor(lbl => lbl.rollno)</td>

                    <td class="subheader">@Html.TextBoxFor(txt => txt.rollno)</td>

                    <td>@Html.ValidationMessageFor(m => m.rollno)</td>
                </tr>
                <tr>
                    <td colspan="3">&nbsp;</td>
                </tr>

                <tr>
                    <td colspan="3" class="incenter"><input type="submit" value="Add" class="bn" /></td>
                </tr>

                <tr>
                    <td colspan="3">&nbsp;</td>
                </tr>
            </table>
        }
    </div>
</div>