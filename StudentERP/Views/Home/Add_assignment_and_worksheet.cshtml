@model StudentERP.Models.assignment_worksheet

@{
    ViewBag.Title = "Add Assignment & Worksheet";
}

<div class="dialog">
    <div class="panel-default">

        @using (Html.BeginForm("login", "home", FormMethod.Get, new { enctype = "multipart/form-data" }))
        {
            <table width="100%">
                <tr>
                    <th colspan="3" class="header">Add Assignment And Worksheet</th>
                </tr>

                <tr>
                    <td colspan="3">&nbsp;</td>
                </tr>
                <tr>
                    <td colspan="3">&nbsp;</td>
                </tr>
                <tr>
                    <td>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</td>

                    <td class="subheader">@Html.LabelFor(lbl => lbl.aname)</td>

                    <td class="subheader">
                        <input type="file" name="FileUpload1" />
                        <input type="submit" name="Submit" id="Submit" value="Upload" />
                    </td>

                    <td>@Html.ValidationMessageFor(m => m.aname)</td>
                </tr>

                <tr>
                    <td colspan="3">&nbsp;</td>
                </tr>
                <tr>
                    <td>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</td>

                    <td class="subheader">@Html.LabelFor(lbl => lbl.atitl)</td>

                    <td class="subheader">@Html.TextBoxFor(txt => txt.atitl)</td>

                    <td>@Html.ValidationMessageFor(m => m.atitl)</td>
                </tr>

                <tr>
                    <td colspan="3">&nbsp;</td>
                </tr>
                <tr>
                    <td>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</td>

                    <td class="subheader">@Html.LabelFor(lbl => lbl.descrp)</td>

                    <td class="subheader">@Html.TextAreaFor(txt => txt.descrp)</td>

                    <td>@Html.ValidationMessageFor(m => m.descrp)</td>
                </tr>
                <tr>
                    <td colspan="3">&nbsp;</td>
                </tr>
                <tr>
                    <td>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</td>

                    <td class="subheader">@Html.LabelFor(lbl => lbl.tname)</td>

                    <td class="subheader">@Html.DropDownList("Teacher Name", (IEnumerable<SelectListItem>)ViewBag.teacherlist, "---Select---")</td>

                    <td>@Html.ValidationMessageFor(m => m.tname)</td>
                </tr>



                <tr>
                    <td colspan="3">&nbsp;</td>
                </tr>
                <tr>
                    <td>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</td>

                    <td class="subheader">@Html.LabelFor(lbl => lbl.std)</td>

                    <td class="subheader">@Html.DropDownList("Standard", (IEnumerable<SelectListItem>)ViewBag.stdlist, "---Select---")</td>

                    <td>@Html.ValidationMessageFor(m => m.std)</td>
                </tr>
                <tr>
                    <td colspan="3">&nbsp;</td>
                </tr>

                <tr>
                    <td colspan="3" class="incenter"><input type="submit" value="Add" class="bn" /></td>
                </tr>

                <tr>
                    <td colspan="3">&nbsp;</td>
                </tr>
            </table>
        }
    </div>
</div>
